@model IEnumerable<Tienda.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive bg-light p-5 rounded">
    <h3>Categorias</h3>

    @Html.ActionLink("Nueva Categoria", "Formulario", null, new { @class = "btn btn-primary", role = "button" })
    
    <form class="d-inline-flex p-2">
        @using (Html.BeginForm("Busqueda", "Categorias", FormMethod.Get))
        {

            @Html.TextBox("txtBusqueda", null, new { @class = "form-control me-2", placeholder = "Buscar", type = "search" })
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
        }
    </form>
    <table class="table table-striped" style="width:100%">
        <thead class="table-ligt">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Ver", "Detalles", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm", role = "button" })

                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
