@model IEnumerable<Tienda.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Contenido (tabla)-->
<div class="table-responsive bg-light p-5 rounded">

    <h3>Usuarios</h3>

    <!--Acciones -->


    @Html.ActionLink("Nuevo Usuario", "Formulario", null, new { @class = "btn btn-primary", role = "button" })

    <!--buscador -->
    <form class="d-inline-flex p-2">

        @using (Html.BeginForm("Busqueda", "Usuarios", FormMethod.Get))
        {

            @Html.TextBox("txtBusqueda", null, new { @class = "form-control me-2", placeholder = "Buscar", type = "search" })
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
        }




    </form>

    <!--Contenido (tabla)-->

    <table class="table table-striped" style="width:100%">
        <thead class="table-light">
            <tr>

                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.appaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apmaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaRegistro)
                    </td>
                    <td>
                        @Html.ActionLink("Ver", "Detalles", new { id = item.id }, new { @class = "btn btn-outline-primary btn-sm", role = "button" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
